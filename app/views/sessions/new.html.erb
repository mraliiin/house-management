
<script type="text/template" id="login-panel">

  <div class="col-xs-12">
      <div class="page-header">
        <h1>HousePad Trade Login</h1>
      </div>
  </div>

  <div class="col-md-8 col-md-offset-2 col-xs-12">

    <form class="form form-horizontal" role="form" id="login-form">

        <div class="form-group">
            <%= label_tag :email, nil, class: "col-lg-4 control-label" %>
            <div class="col-lg-8">
                <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter email" %>
            </div>
        </div>

        <div class="form-group">
            <%= label_tag :password, nil, class: "col-lg-4 control-label" %>
            <div class="col-lg-8">
                <%= password_field_tag :password, nil, class: "form-control", placeholder: "Enter password" %>
            </div>
        </div>

          <div class="form-group">
            <div class="alert" id="login-feedback"></div>
          </div>

        <div class="form-group">
          <div class="col-lg-8 col-lg-offset-4">
            <%= submit_tag "Login", class: "btn btn-large btn-primary", id: "btn-login" %>
            <%= button_tag "Register", class: "btn btn-large btn-default", id: "btn-register" %>
          </div>
        </div>

    </form>

  </div>
</script>


<script type="text/javascript">
  $(function(){
      HousePad.TradeApp.start();
      HousePad.TradeApp.module("Login").start();
  });

</script>